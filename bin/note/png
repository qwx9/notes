#!/bin/rc
rfork n
if(! ~ $#* 2){
	echo usage $0 winid pathspec >[1=2]
	exit usage
}
win=/dev/wsys/$1/window
if(! test -f $win){
	echo $0 ''$win'' directory not found >[1=2]
	exit notfound
}
vars=`{note/mkdir $2} || exit
cd $vars(3) || exit
f=`{awk \
	-v 'pref='^$vars(1) \
'BEGIN{
	n = 1
	do{
		if(n >= 1000){
			err = "too many pics, asshole"
			print err > "/fd/2"
			exit(err)
		}
		f = sprintf("%s.%03d.png", pref, n++)
	}while(system("test -f " f) != "1")
	print f
}'}
if(! ~ $status '')
	exit 'too many pics'
topng <$win >$f
echo '[]('/$f')'
