#!/bin/rc
rfork n
if(! ~ $#* 1){
	echo usage: $0 path >[1=2]
	exit usage
}
noteroot=$home^/p/notes/net
cd $noteroot || exit
notepath=`{echo $1 | sed s,'^'^$noteroot^/,,}
notedir=''
if(~ $notepath '')
	exit
if(test -d $notepath){
	echo is an existing directory >[1=2]
	exit 'not a file'
}
notedir=`{basename -d $notepath}
mkdir -p $notedir || exit
echo $notepath $notedir $noteroot
